{
  "manifest_version": 3,
  "name": "SaveAction Recorder",
  "version": "1.0.0",
  "description": "Record user interactions on web pages and export them as JSON files for automated testing",
  "author": "SaveAction Team",
  "homepage_url": "https://github.com/rezwanahmedsami/SaveAction-recorder-browser-extenstion",

  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "SaveAction Recorder"
  },

  "background": {
    "service_worker": "background/index.ts",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.ts"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "permissions": ["storage", "activeTab", "tabs", "downloads"],

  "host_permissions": ["<all_urls>"],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
